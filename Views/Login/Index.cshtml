@model HPAF.Models.Login
@{
    ViewBag.Title = "Login";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/favicon.ico">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/login.css")
    @Styles.Render("~/Content/ie10-viewport-bug-workaround.css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="container">
        <div class="loginContainer google-card">
            @*<br />
            <img src="~/Content/Images/DMSLogo.png" class="logoCenter" align="middle" alt="DMS Logo" />
            <br />
            <img src="~/Content/Images/DMSText.png" class="nameCenter img-responsive" alt="DMS Text" />*@
            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-signin" }))
            {
                <h2 class="form-signin-heading bold">Login</h2>
                <label for="inputEmail" class="sr-only">UserName</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username", type = "text" });
                <br />
                <label for="inputPassword" class="sr-only">Password</label>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "password" });
                <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
            }
            <br />
           
        </div>
        
    </div> <!-- /container -->
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="~/Scripts/ie10-viewport-bug-workaround.js"></script>
    <input type="hidden" id="error" value="@TempData["Error"]" />
    <input type="hidden" value="ToastTrigger" id="toastTrigger" />
    <script>
        $(document).ready(function () {
            $('#toastTrigger').on('click', function () {
                if ($('#error').val() != '') {
                    toastr.error($('#error').val(), 'Login Error');
                }
            });
            $('#toastTrigger').click();

         

            $([tab]).focusin(function () {
                if ('@Session["UserName"]' != null)
                    window.location.href = '/Home';
            }).focusout(function () {
                //Your logic when the page gets inactive
            });
        });

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    </script>
</body>
</html>